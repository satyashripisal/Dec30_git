package com.MavenProject1.Utility;

import com.aventstack.extentreports.ExtentReports;
import com.aventstack.extentreports.reporter.ExtentSparkReporter;
import com.aventstack.extentreports.reporter.configuration.Theme;

public class ExtentReporterNG {
	//extentReports(2) //extentTest(3) //extentSparkReporter(1)
	public static ExtentReports extent;
	
	public static  ExtentReports ExtentReporterNG() {
		
		String pathreport = "C:\\Users\\dell\\eclipse-workspace\\MavenProject1\\TestReport";
		
		ExtentSparkReporter reporter = new ExtentSparkReporter(pathreport);//(1)
		
	   reporter.config().setDocumentTitle("TestReport");
	   reporter.config().setReportName("Automation TestReport");
	   reporter.config().setTheme(Theme.DARK);
	   
	   extent = new ExtentReports();
	   extent.attachReporter(reporter);
	   extent.setSystemInfo("ProjectName", "MavenProject1");
	   extent.setSystemInfo("QA", "Satyashri");
	   extent.setSystemInfo("BrowserName","chrome");
	   extent.setSystemInfo("OS", "Windows");
	   return extent;
	   }	
}
